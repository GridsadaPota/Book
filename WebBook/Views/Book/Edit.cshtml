@model BookModel;
@{
    ViewData["Title"] = "Edit";
}
<form method="post" asp-controller="Book" asp-action="Edit">
    <div class="form-group">
        <label for="Book_Code">Book Code</label>
        <input type="text" class="form-control" asp-for="Book_Code">
        <span asp-validation-for="Book_Code" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Book_Name">Book Name</label>
        <input type="text" class="form-control" asp-for="Book_Name">
        <span asp-validation-for="Book_Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Book_Author">Book Author</label>
        <input type="text" class="form-control" asp-for="Book_Author">
        <span asp-validation-for="Book_Author" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Price">Price</label>
        <input type="text" class="form-control" asp-for="Price">
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
        <button type="button" class="btn btn-dark" onclick="history.go(-1); return false">Back</button>
    </div>

</form>
